{
  "Select All": {
    "prefix": "sel",
    "body": [
      "SELECT * FROM ${1:table_name} LIMIT ${2:100};"
    ],
    "description": "Select all from table with limit"
  },
  "Select Count": {
    "prefix": "count",
    "body": [
      "SELECT count(*) FROM ${1:table_name};"
    ],
    "description": "Count rows in table"
  },
  "Select Where": {
    "prefix": "selw",
    "body": [
      "SELECT * FROM ${1:table_name}",
      "WHERE ${2:condition};"
    ],
    "description": "Select with Where clause"
  },
  "Update": {
    "prefix": "upd",
    "body": [
      "UPDATE ${1:table_name}",
      "SET ${2:column} = ${3:value}",
      "WHERE ${4:condition};"
    ],
    "description": "Update statement"
  },
  "Delete": {
    "prefix": "del",
    "body": [
      "DELETE FROM ${1:table_name}",
      "WHERE ${2:condition};"
    ],
    "description": "Delete statement"
  },
  "Insert": {
    "prefix": "ins",
    "body": [
      "INSERT INTO ${1:table_name} (${2:columns})",
      "VALUES (${3:values});"
    ],
    "description": "Insert statement"
  },
  "Order By Desc": {
    "prefix": "ord",
    "body": [
      "ORDER BY ${1:column_name} DESC"
    ],
    "description": "Order by descending"
  },
  "Group By": {
    "prefix": "grp",
    "body": [
      "GROUP BY ${1:column_name}"
    ],
    "description": "Group by column"
  },
  "Table Create": {
    "prefix": "create",
    "body": [
      "CREATE TABLE ${1:table_name} (",
      "  ${2:id} SERIAL PRIMARY KEY,",
      "  ${3:column_name} ${4:VARCHAR(255)}",
      ");"
    ],
    "description": "Create new table"
  }
}
