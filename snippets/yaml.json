{
  "Docker Compose Minimal": {
    "prefix": "dcmin",
    "body": [
      "services:",
      "  ${1:app}:",
      "    image: ${2:your-image}",
      "    restart: always"
    ],
    "description": "Minimal Docker Compose (dcmin)"
  },
  "Docker Compose Medium": {
    "prefix": "dcmed",
    "body": [
      "services:",
      "  ${1:app}:",
      "    image: ${2:your-image}",
      "    restart: unless-stopped",
      "    environment:",
      "      - ${3:ENV_VAR}=${4:value}",
      "    ports:",
      "      - \"${5:8080}:${6:80}\"",
      "    volumes:",
      "      # 命名卷: [卷名]:[容器内路径] (用于持久化数据)",
      "      - \"${9:data-volume}:${10:/data}\"",
      "",
      "# 顶层 volumes 用于声明 '命名卷'",
      "volumes:",
      "  ${9:data-volume}:"
    ],
    "description": "Medium Docker Compose with image, env, ports, and volumes (dcmed)"
  }
}
